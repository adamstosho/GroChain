{
  "name": "server",
  "version": "1.0.0",
  "description": "GroChain backend server",
  "main": "dist/index.js",
  "type": "commonjs",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:integration": "jest --testPathPattern=integration",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "seed": "ts-node scripts/seed.ts",
    "seed:ai": "ts-node scripts/seed-ai-data.ts",
    "seed:phase2": "ts-node scripts/seed-phase2-data.ts",
    "docker:build": "docker build -t grochain-backend .",
    "docker:run": "docker run -p 5000:5000 grochain-backend",
    "docker:compose": "docker-compose up -d",
    "docker:compose:down": "docker-compose down",
    "type-check": "tsc --noEmit"
  },
  "directories": {
    "test": "tests"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
