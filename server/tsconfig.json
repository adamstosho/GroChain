{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "outDir": "./dist",
    "rootDir": "./src",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "types": ["node", "jest"],
    "allowSyntheticDefaultImports": true
  },

  "include": ["src/**/*.ts", "src/types/*.d.ts"],
  "exclude": ["node_modules", "dist"]
}
